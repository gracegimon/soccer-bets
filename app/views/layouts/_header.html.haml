%a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
  %span.icon-bar
  %span.icon-bar
  %span.icon-bar
.span3
  = image_tag "brasil-header.jpg", size: "200x100"
.span4
  %a(href= root_path)
    = image_tag "tuPote.png", size: "200x100"
.container.nav-collapse
  .span4
    %ul.nav.navbar-nav.navbar-right
      - if current_user
        - if current_user.is_admin?
          %li= link_to "Resultados Oficiales", tournament_score_board_path(current_tournament,main_score_board)
          %li= link_to "Administración de Quinielas", show_all_score_boards_path
        - else
          %li= link_to "Tus quinielas", user_score_boards_path(current_user)
        %li= link_to "Ranking", ranking_score_boards_path
        %li= link_to "Estadios", "/path3"
      - else
        %li= #link_to "Crea tu cuenta", sign_up_path
        %li= link_to "Inicia sesión", sign_in_path
  .span7
    %ul.nav.navbar-nav.navbar-right
      %li 
        %a{href: "#"}
          = image_tag "facebook.gif", size: "40x40"
      %li 
        %a{href: "#", style: "padding-top:15px;"}
          = image_tag "twitter.png", size: "40x43"
      - if current_user
        %li 
          %a{href: "#"}
            = current_user.username
        %li= link_to "Cerrar sesión", signed_out_path
