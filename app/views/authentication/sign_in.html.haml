.well
  %h3 Sign In
  = form_for @user, :as => :user, :url => sign_in_path(@user) do |f|
    %p
      = f.label 'email:'
      %br/
      = f.text_field :email, required: true
    %p
      = f.label 'password:'
      %br/
      = f.password_field :password, required: true
    %p
      = f.submit 'Sign In'
      \   
      \#{f.submit 'Clear Form', :type => 'reset'}

    %p= link_to 'forgot your password?', :forgot_password 