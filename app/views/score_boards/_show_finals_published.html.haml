
%h3.white-text Final
.row
  - team_1 = final.team_1
  - team_2 = final.team_2
  - score = final.score
  .span3.team-name
    %p= team_1.name
    = image_tag team_1.flag
  .span6
    .span5
      = score.team_1_goals
      %p= final.day
      %p= final.city
    .span1
      %p{style: "display:inline;"} -
    .span5
      = score.team_2_goals
      %p= final.time
  .span3.team-2-name
    %p= final.team_2.name
    = image_tag team_2.flag

